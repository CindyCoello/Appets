
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de Peronas</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead style="background-color:mediumpurple" class="text-center  text-white">
                <tr>
                    <th>
                        ID Persona
                    </th>
                    <th>
                        Identidad
                    </th>
                    <th>
                        Nombre Completo
                    </th>
                    <th>
                        Teléfono
                    </th>
                    <th>
                        Correo
                    </th>
                    <th>
                        Es Adoptante
                    </th>

                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>





<div class="modal fade" tabindex="-1" id="ModalEliminar" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Persona</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="ID" />
                            <p>¿Esta seguro que desea eliminar el registro?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-danger" onclick="Eliminar()">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{

    <script src="~/js/Catalogo/list/list-persona.js"></script>
    <script src="~/js/Catalogo/llenar-dropdow-list.js"></script>
    <script>
        appConfig.Persona.configureTable({ listUrl: "@Url.Action("PerList")" });

    </script>

}



