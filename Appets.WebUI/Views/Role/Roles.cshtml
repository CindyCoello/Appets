@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.5em;font-weight: 600;">Listado de Roles</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead  style="background-color:mediumpurple" class="text-center  text-white">
                <tr>
                    <th>
                        ID rol
                    </th>
                    <th>
                        Nombre Rol
                    </th>
                    <th>
                        Accion
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>





@section Scripts{
    <script src="~/js/Seguridad/list/list-roles.js"></script>
    <script>
        appConfig.Roles.configureRol({ listUrl: "@Url.Action("ListRoles")" });

    </script>
}


