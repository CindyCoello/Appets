
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-md-10"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de mascotas</h3></div>
            <div class="col-md-2">
            </div>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped dt-responsive nowrap " id="datatable">

            <thead style="background-color:mediumpurple" class="text-center  text-white">
                <tr>
                    <th>Id</th>
                    @*<th>Imagen</th>*@
                    <th>Nombre</th>
                    <th>Especie</th>
                    <th>Raza</th>
                    <th>Sexo</th>
                    <th>Color</th>
                    <th>Adoptado</th>
                    <th>Reservado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
        </table>

    </div>
</div>


<div class="modal fade" tabindex="-1" id="ModalEliminar" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Mascota</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input type="hidden" id="ID" />
                            <p>¿Esta seguro que desea eliminar el registro?</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-outline-danger" onclick="Eliminar()">Confirmar</button>
            </div>
        </div>
    </div>
</div>




@section Scripts{

    <script src="~/js/Catalogo/list/list-mascotas.js"></script>
    <script src="~/js/Catalogo/llenar-dropdow-list.js"></script>
    <script>
        appConfig.Mascotas.configureTable({ listUrl: "@Url.Action("ListarMascotas")" });
    </script>
}

