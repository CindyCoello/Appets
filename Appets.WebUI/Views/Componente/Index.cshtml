@model ComponenteViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.1em;font-weight: 600;">Listado de componentes</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive  nowrap" id="datatable">
            <thead style="background-color:mediumpurple" class="text-center  text-white">
                <tr>
                    <th>
                        ID Componente
                    </th>
                    <th>
                        Nombre Componente
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-route="SaveComponente" method="post" autocomplete="off"
                  data-ajax-begin="appConfig.Catalogs.begin"
                  data-ajax-success="appConfig.Catalogs.success"
                  data-ajax-failure="appConfig.Catalogs.failure"
                  data-ajax-complete="appConfig.Catalogs.complete">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="comp_Id" id="item-id" />

                <div class="modal-body">
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="comp_Nombre" class="control-label"></label>
                                <input asp-for="comp_Nombre" class="form-control" maxlength="100" />
                                <span class="text-danger" asp-validation-for="comp_Nombre"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary"></button>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts{


    <script src="~/js/Seguridad/list/list-componentes.js"></script>
    <script>
        appConfig.Componentes.configureTable({ listUrl: "@Url.Action("CompList")" });

    </script>

    <script>
        appConfig.Catalogs.configure({

            displayName: "componente",
            getUrl: "@Url.Action("GetComponente")"

        });

    </script>
}




