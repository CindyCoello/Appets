
@model Appets.WebUI.Models.CambiarContraseña


    <form asp-action="CambiarContraseña" method="post" autocomplete="off" >
        <div class="col-12">
            <div class="card">
                <div class="card-header" style="background-color: lightgrey";>
                    <a style="font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-size:1em;font-weight: 600; "> <img class="img-fluid" alt="secure" src="~/images/secure.png" /> Cambiar Contraseña </a>
                </div>
                <div class="card-body">
                    <input type="hidden" asp-for="usu_Id" id="id" />
                    <input type="hidden" asp-for="usu_Identidad" id="identidad" />
                    <br />
                    <div class="form-group">
                        <label class="control-label" asp-for="NuevaContraseña"></label>
                        <input class="form-control" asp-for="NuevaContraseña" type="password" value="" />
                        <span asp-validation-for="NuevaContraseña" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for="ConfirmarContraseña"></label>
                        <input class="form-control" asp-for="ConfirmarContraseña" type="password" value="" />
                        <span asp-validation-for="ConfirmarContraseña" class="text-danger"></span>
                    </div>

                    <input type="submit" class="btn btn-primary btn-raised" value="Cambiar Contraseña" />
                    <a type="button" style="background-color:gray;color:white" class="btn btn-default" asp-controller="Usuarios" asp-action="Index" value="Cancelar">Cancelar</a>
                </div>
            </div>
            </div>
    </form>

   
