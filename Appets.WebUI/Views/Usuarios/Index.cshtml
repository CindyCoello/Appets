@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">

        <div class="float-left"><h3 style="font-family: Nunito,sans-serif; font-size:1.5em;font-weight: 600;">Listado de Usuarios</h3></div>

    </div>
    <div class="card-body">

        <table class="table table-striped table-bordered dt-responsive table-centered nowrap" id="datatable">
            <thead style="background-color:mediumpurple" class="text-center  text-white">
                <tr>
                    <th>
                        Id Usuario
                    </th>
                    <th>
                        Identidad
                    </th>
                    <th>
                       Nombre Completo
                    </th>
                    
                    <th>
                        Teléfono
                    </th>                
                    <th>
                        Rol
                    </th>
                    <th>
                        Activo
                    </th>
                    <th>Acciones</th>

                </tr>
            </thead>

        </table>

    </div>
</div>




@section Scripts{
        <script src="~/js/Seguridad/usuarios.js"></script>
        <script src="~/js/Seguridad/list/list-usuario.js"></script>

        <script>
            appConfig.Usuarios.configureTable({ listUrl: "@Url.Action("UserList")" });

        </script>
    }
