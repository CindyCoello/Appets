                                        <li><a asp-action="Roles" asp-controller="Role">Roles</a> </li>
                                        <li><a asp-action="Index" asp-controller="Componente">Componente</a> </li>
                                        <li><a asp-action="Index" asp-controller="Modulo">Modulo</a> </li>
                                        <li><a asp-action="Index" asp-controller="ModuloPantallas">Modulo Pantallas</a> </li>
                                    }

