                                        <ul>

                                            <li><a asp-action="Index" asp-controller="Albergue">Albergue</a> </li>
                                            <li><a asp-action="Index" asp-controller="Persona">Personas</a> </li>
                                            <li><a asp-action="Index" asp-controller="Empleado">Empleados</a> </li>
                                            <li><a asp-action="Index" asp-controller="Voluntario">Voluntarios</a> </li>
                                            <li><a asp-action="Index" asp-controller="Ocupacion">Cargos</a> </li>
                                            <li><a asp-action="Index" asp-controller="Donante">Donantes</a> </li>
                                        </ul>
                                    </li>
                                    <li>
                                        <ul>

                                            <li><a asp-action="Index" asp-controller="FichaAdopcion">Ficha Adopción</a> </li>
                                            <li><a asp-action="Index" asp-controller="Solicitud">Solicitud Adopción</a> </li>
                                        </ul>
                                    </li>
                                }
