                                {


                                    @if (pantallas.Contains("Listado de Usuarios") || pantallas.Contains("Crear Usuarios") || pantallas.Contains("Editar Usuarios"))
                                    {
                                        <li><a asp-action="Index" asp-controller="Usuarios">Usuarios</a> </li>

                                    }

                                    @if (pantallas.Contains("Listado de Roles") || pantallas.Contains("Listado de Componentes") || pantallas.Contains("Listado Modulos") || pantallas.Contains("Listado Pantallas"))
